<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Tests</title>
    
        <% include ../partials/header.ejs %>

        <link rel="stylesheet" href="/css/tests.css">

    </head>
        <body>

        <% include ../partials/navbar.ejs %>
        <div class="container">
        
            <div>
                <h1 id="heading" class="text-center my-3">
                    Tests
                    <% if(!user.isStudent) { %> 
                        <span class="pull-right">
                            <a href="/createTest">
                                <button class="btn btn-lg btn-primary">Create Test</button>
                            </a>
                        </span>
                    <% } %>
                </h1>
            </div>

            <hr class="style14 mb-2">

            <% tests.forEach(test => { %>
                <a href="/test/<%= test._id %>">
                    <div class="card event-card mb-3">
                        <div class="card-body">
                            <div class="media">
                                <img class="d-flex mr-5 event-img" src="http://placehold.it/100x100" alt="">
                                <div class="media-body">
                                    <h5 class="event-name"><%= test.name %></h5>
                                    <div class="event-description">
                                        <div class="datetime">
                                            <i class="fa fa-book"></i> <%= test.subject %>
                                            <span class="pull-right">
                                                <i class="fa fa-clock-o"></i> <b>From: </b> <%= test.startingTime.toLocaleString() %> 
                                            </span> 
                                        </div>
                                        <div class="venue">
                                            <i class="fa fa-user"></i> <%= test.createdBy %>
                                            <span class="pull-right">
                                                <i class="fa fa-clock-o"></i> <b>To: </b> <%= test.endingTime.toLocaleString() %> 
                                            </span> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>  
            <% }) %>
        </div>

    </body>
</html>

